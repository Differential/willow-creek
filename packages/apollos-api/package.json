{
  "name": "apollos-api",
  "version": "0.0.1",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "start": "yarn start:dev",
    "start:dev": "nodemon ./src/index.js --exec babel-node --delay 2",
    "start:prod": "NODE_ENV=production node ./lib/index.js",
    "build": "NODE_ENV=production rm -rf ./lib && mkdir -p lib && babel ./src -d ./lib",
    "test": "echo \"No tests in apollos-church-api, all tested code is located in @apollosproject npm modules\"",
    "test:watch": "jest --maxWorkers=2 --watch",
    "lint": "eslint ./src --ext .js",
    "fixlint": "eslint ./src --ext .js --fix"
  },
  "engines": {
    "node": ">=8.11.x"
  },
  "jest": {
    "collectCoverage": true,
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test|tests).{js,jsx,mjs}"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@apollosproject/config": "^0.8.3",
    "@apollosproject/data-connector-analytics": "^0.8.3",
    "@apollosproject/data-connector-bible": "^0.8.3",
    "@apollosproject/data-connector-church-online": "^0.8.3",
    "@apollosproject/data-connector-cloudinary": "^0.8.3",
    "@apollosproject/data-connector-onesignal": "^0.8.3",
    "@apollosproject/data-connector-passes": "^0.8.3",
    "@apollosproject/data-connector-rock": "^0.8.3",
    "@apollosproject/data-connector-twilio": "^0.8.4",
    "@apollosproject/data-schema": "^0.8.4",
    "@apollosproject/rock-apollo-data-source": "^0.8.4",
    "@apollosproject/server-core": "^0.8.3",
    "@babel/node": "^7.2.2",
    "apollo-datasource-rest": "^0.4.0",
    "apollo-server": "^2.0.5",
    "apollo-server-express": "^2.5.0",
    "color": "3.0.0",
    "dotenv": "6.0.0",
    "express": "^4.16.4",
    "graphql": "0.13.2",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.11",
    "prettier": "1.12.1",
    "randomcolor": "^0.5.4",
    "unescape": "^1.0.1"
  },
  "devDependencies": {
    "@apollosproject/apollo-server-env-mock": "^0.8.3",
    "@apollosproject/babel-preset-apollos": "^0.8.3",
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.6",
    "codecov": "3.0.2",
    "nodemon": "1.18.7"
  }
}
